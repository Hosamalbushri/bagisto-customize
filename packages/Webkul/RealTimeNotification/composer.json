{
    "name": "bagisto/real-time-notification",
    "description": "RealTimeNotification package for Bagisto with Firebase support for push notifications and analytics",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "bagisto",
        "firebase",
        "notifications",
        "real-time",
        "push-notifications",
        "analytics",
        "laravel"
    ],
    "authors": [
        {
            "name": "Webkul",
            "email": "support@webkul.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/framework": "^10.0",
        "webkul/core": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "orchestra/testbench": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Webkul\\RealTimeNotification\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Webkul\\RealTimeNotification\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Webkul\\RealTimeNotification\\Providers\\RealTimeNotificationServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"if (file_exists('vendor/webkul/core/src/Console/Commands/Install.php')) { require 'vendor/webkul/core/src/Console/Commands/Install.php'; }\""
        ],
        "post-update-cmd": [
            "@php -r \"if (file_exists('vendor/webkul/core/src/Console/Commands/Install.php')) { require 'vendor/webkul/core/src/Console/Commands/Install.php'; }\""
        ]
    }
}
